{% extends "AppBundle::layoutAdmin.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>User list</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-success" href="{{ path('admin_user_new') }}">Create a new User</a>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Fullname</th>
                        <th>Roles</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Adddate</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.face.fullname }}</a></td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge badge-default">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.isActive %}
                                <span class="label label-xs label-success">Activated</span>
                            {% else %}
                                <span class="label label-xs label-danger">Deactivated</span>
                            {% endif %}
                        </td>
                        <td>{% if user.addDate %}{{ user.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <div class="btn-group">
                              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-cog"></span>Actions <span class="caret"></span>
                              </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ path('admin_user_show', { 'id': user.id }) }}"><span class="glyphicon glyphicon-file"></span> see</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_user_edit', { 'id': user.id }) }}"><span class="glyphicon glyphicon-edit"></span> edit</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-success" href="{{ path('admin_user_new') }}">Create a new user</a>
        </div>
    </div>
{% endblock %}