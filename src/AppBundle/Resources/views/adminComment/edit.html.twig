{% extends "AppBundle::layoutAdmin.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Comment edit</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <img src="{{ path('photo', {'id':comment.media.id, 'size':'500', 'ratio':'original', 'extention':'jpg'}) }}" class="img-responsive" alt="{{ comment.media.fileOldName }}"> 
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h2>Author :  {{ comment.user.name }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <button class="btn btn-success" type="submit" value="Edit"><span class="glyphicon glyphicon-edit"></span> Edit</button>
            {{ form_end(edit_form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <ul class="list-unstyled list-inline">
                <li>
                    <a class="btn btn-info" href="{{ path('admin_comment_index') }}"><span class="glyphicon glyphicon-list"></span> Back to the list</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <button class="btn btn-danger" type="submit" value="Delete"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}