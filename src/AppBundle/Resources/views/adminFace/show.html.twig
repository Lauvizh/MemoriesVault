{% extends "AppBundle::layoutAdmin.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Face</h1>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ face.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ face.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ face.lastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if face.birthDate %}{{ face.birthDate|date('d-m-Y') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('admin_face_index') }}"><span class="glyphicon glyphicon-list"></span> Back to the list</a>
        </li>
        <li>
            <a class="btn btn-success" href="{{ path('admin_face_edit', { 'id': medium.id }) }}"><span class="glyphicon glyphicon-edit"></span> Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn btn-danger" type="submit" value="Delete"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
