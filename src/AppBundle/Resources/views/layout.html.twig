							<li><a class="btn-menu" href="{{ path('homepage') }}" ><span class="glyphicon glyphicon-th-large"></span> Accueil </a></li>
							{{ render(controller('AppBundle:Theme:getAllThemesMenu')) }}
							<li><a class="btn-menu" href="#"><span class="glyphicon glyphicon-calendar"></span> Archives </a></li>
							<li><a class="btn-menu" href="#"><span class="glyphicon glyphicon-user"></span> Visages </a></li>
							{% if is_granted('ROLE_ADMIN') %}
								<li class="dropdown">
									<a href="#" class="dropdown-toggle btn-menu-admin" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Admin<span class="caret"></span></a>
									<ul class="dropdown-menu dropdown-menu-right" role="menu">
										<li><a class="btn-menu btn-menu-admin" href="#"><span class="glyphicon glyphicon-user"></span> Membres</a></li>
										<li><a class="btn-menu btn-menu-admin" href="#"><span class="glyphicon glyphicon-user"></span> Visages</a></li>
										<li><a class="btn-menu btn-menu-admin" href="#"><span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-transfer"></span> Connexions des Membres</a></li>
										<li><a class="btn-menu btn-menu-admin" href="#"><span class="glyphicon glyphicon-comment"></span> Commentaires</a></li>
										<li><a class="btn-menu btn-menu-admin" href="#"><span class="glyphicon glyphicon-star"></span> Evenements</a></li>
										<li><a class="btn-menu btn-menu-admin" href="#"><span class="glyphicon glyphicon-th"></span> Themes</a></li>
										<li><a class="btn-menu btn-menu-admin" href="#"><span class="glyphicon glyphicon-picture"></span> Medias</a></li>
									</ul>
								</li>
							{% endif %}
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Espace perso<span class="caret"></span></a>
								<ul class="dropdown-menu dropdown-menu-right" role="menu">
									<li class=""><a href="#"><span class="glyphicon glyphicon-user"></span> Mon profil</a></li>
									<li class="divider"></li>
									<li ><a href="#"><span class="glyphicon glyphicon-log-out"></span> Deconnexion</a></li>
								</ul>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
	{% endblock %}

	<div class="container">
		{% block content%}{% endblock %}
	</div>
	<div class="container">
		{% block footer%}
