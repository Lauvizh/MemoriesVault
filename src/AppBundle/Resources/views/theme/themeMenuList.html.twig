{% if allThemes %}
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-list"></span> themes<span class="caret"></span></a>
		<ul class="dropdown-menu dropdown-menu-right" role="menu">
			{% for theme in allThemes %}
				<li><a class="btn-menu" href="{{ path('theme', {'id':theme.id})}}">{{ theme.name }}</a></li>
			{% endfor %}
		</ul>
	</li>
{% endif %}