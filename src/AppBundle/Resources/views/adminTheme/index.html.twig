{% extends 'base.html.twig' %}

{% block body %}
    <h1>Theme list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Homepage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td><a href="{{ path('admin_theme_show', { 'id': theme.id }) }}">{{ theme.id }}</a></td>
                <td>{{ theme.name }}</td>
                <td>{% if theme.homePage %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_theme_show', { 'id': theme.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_theme_edit', { 'id': theme.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_theme_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
